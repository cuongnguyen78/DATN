@model PagedList.IPagedList<SachOnline.Models.SanPham>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="page-content" class="home-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Carousel -->
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators hidden-xs">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            @*<img src="~/Assets/images//main-banner1-1903x600.jpg" alt="First slide">*@
                            <img src="~/Assets/images//slide1.png" alt="First slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                        <div class="item">
                            @*<img src="~/Assets/images//main-banner2-1903x600.jpg" alt="Second slide">*@
                            <img src="~/Assets/images//slide2.png" alt="Second slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                        <div class="item">
                            @*<img src="~/Assets/images//main-banner3-1903x600.jpg" alt="Third slide">*@
                            <img src="~/Assets/images//slide3.png" alt="Third slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div><!-- /carousel -->
            </div>
        </div>
        <div class="row">
            <div class="banner">
                <div class="col-sm-4">
                    <img src="~/Assets/images//sub-banner1_1.png" />
                </div>
                <div class="col-sm-4">
                    <img src="~/Assets/images//sub-banner2_1.jpg" />
                </div>
                <div class="col-sm-4">
                    <img src="~/Assets/images//sub-banner3_1.jpg" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="heading"><h3 style="color: #fe4f4b;">Sản phẩm chính</h3></div>
                <div class="products">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="product">
                                <div class="image"><a href="@Url.Action("Details","SanPhams",new { id=item.MaSP})"><img style="width:200px;height:250px;" src="~/Assets/images/DanhMucSach//@item.HinhAnh" /></a></div>
                                <div class="buttons">
                                    @if (HttpContext.Current.Session["SDT"] == null)
                                    {
                                        <a class="btn cart" href="@Url.Action("Index","Login")"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                    }
                                    else
                                    {
                                        <a class="btn cart" href="@Url.Action("AddToCart", "ShoppingCart", new { id = item.MaSP })"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                    }
  
                                </div>
                                <div class="caption">
                                    <div class="name"><h3><a href="@Url.Action("Details","SanPhams",new { id=item.MaSP})">@item.TenSP</a></h3></div>
                                    <div class="price">@item.Gia VNĐ </div>
                                   
                                </div>
                            </div>
                        </div>
                    }

                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Home", new { page }))
                </div>
                
            </div>
            
        </div>
        <div class="row">
            <div class="banner">
                <div class="col-sm-6">
                    <img src="~/Assets/images//sub-banner4_1.jpg" />
                </div>
                <div class="col-sm-6">
                    <img src="~/Assets/images//sub-banner5_1.jpg" />
                </div>
            </div>
        </div>

    </div>
</div>
