@model PagedList.IPagedList<SachOnline.Models.HoaDon>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "XemDonHang";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 78%;
        margin:auto;
        
    }

        #customers td, #customers th {
            border: 4px solid #ddd;
            padding: 4px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

      
        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: center;
            background-color: #fe4f4b;
            color: white;
        }
   
</style>
<body>
    <br />
    <h4 style="color: black" align="Center">Đơn hàng của: @Session["TenKH"].ToString()</h4>
    <br />
    <table id="customers" align="center">
        <tr>
            <th>Mã hóa đơn</th>
            <th>Ngày tạo</th>
            <th>Tình trạng đơn hàng</th>
            
        </tr>
        @{
            var count = 0;
        }
        @foreach (var item in Model)
        {
            { 
               
                
 

            }
                count = count + 1;
            <tr>
                <td>@item.MAHD</td>
                <td>@item.NgayTao</td>
                <td>@item.TinhTrang</td>
                <td align="center">
                    <a class="btn btn-info" href="@Url.Action("XemChiTietDonHang","DatHang",new { id=item.MAHD})"><span style="font-size:20px;">Xem chi tiết hóa đơn</span></a>
                    
                </td>
            </tr>
        }


    </table>
    @if (count == 0)
    {
        <div style="margin-top:200px;margin-bottom:200px;width:100%;"><h4 style="color: #fe4f4b; text-align: center;">Bạn chưa đặt bất cứ đơn hàng nào</h4></div>
    }
    <br />

</body>
<div align="center">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("XemDonHang", new { page }))
</div>

