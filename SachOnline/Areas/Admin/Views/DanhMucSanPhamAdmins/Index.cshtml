@model PagedList.IPagedList<SachOnline.Models.DanhMucSanPham>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <p>
                    @Html.ActionLink("Tạo mới", "Create")
                </p>
                @using (Html.BeginForm())
                {
                    <p>

                        Tìm : @Html.TextBox("searchString")
                        <input type="submit" value="Tìm danh mục theo tên" />
                    </p>
                }
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Danh mục sản phẩm</h4>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                    <tr>
                                        <th>
                                            Mã danh mục
                                        </th>
                                        <th>
                                            Tên danh mục
                                        </th>
                                        <td colspan="1">
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @item.MaDanhMuc
                                        </td>
                                        <td>
                                            @item.TenDanhMuc
                                        </td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaDanhMuc })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaDanhMuc })
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>