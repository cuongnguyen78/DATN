@model PagedList.IPagedList<SachOnline.Models.SanPham>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <p>
                    @Html.ActionLink("Thêm mới sản phẩm", "Create")
                </p>
                @using (Html.BeginForm())
                {
                    <p>

                        Tìm : @Html.TextBox("searchString")
                        <input type="submit" value="Tìm sản phẩm theo tên" />
                    </p>
                }
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Sản phẩm</h4>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                    <tr>
                                        <th>
                                            Mã sản phẩm
                                        </th>
                                        <th>
                                            Tên sản phẩm
                                        </th>
                                        <th>
                                            Giá
                                        </th>
                                        <th>
                                            Mô tả
                                        </th>
                                        <th>
                                            Hình ảnh
                                        </th>
                                        <td colspan="2">
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @item.MaSP
                                        </td>
                                        <td>
                                            @item.TenSP
                                        </td>
                                        <td>
                                            @item.Gia
                                        </td>
                                        <td>
                                            @item.MoTa
                                        </td>
                                        <td>
                                            @{
                                                string Image = "~/Assets/images/DanhMucSach/" + item.HinhAnh;
                                            }
                                            <img src="@Url.Content(Image)" width="150" class="img-thumbnail" />
                                            <br />
                                        </td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP })
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>